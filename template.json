{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Laboratório básico: criação automatizada de uma instância EC2 usando AWS CloudFormation.",
  "Resources": {
    "MinhaInstanciaEC2": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "ImageId": "ami-0c02fb55956c7d316",
        "InstanceType": "t2.micro",
        "Tags": [
          {
            "Key": "Name",
            "Value": "InstanciaLabCloudFormation"
          }
        ]
      }
    }
  },
  "Outputs": {
    "InstanceId": {
      "Description": "ID da instância EC2 criada",
      "Value": { "Ref": "MinhaInstanciaEC2" }
    }
  }
}
